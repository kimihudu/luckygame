<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--shadow-->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="14dp"/>
            <padding
                android:bottom="0dp"
                android:left="8dp"
                android:right="8dp"
                android:top="0dp"></padding>
        </shape>
    </item>

    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">


            <!--<solid android:color="@color/darkgrey"></solid>-->

            <stroke
                android:width="1dp"
                android:color="#C4CDE0"></stroke>

            <gradient
                android:startColor="@color/grey"
                android:centerColor="@color/black"
                android:endColor="@color/black"
                android:type="linear"
                android:angle="45"/>

            <padding
                android:bottom="8dp"
                android:left="0dp"
                android:right="0dp"
                android:top="8dp"></padding>

            <corners android:radius="10dp"></corners>

        </shape>
    </item>
</layer-list>