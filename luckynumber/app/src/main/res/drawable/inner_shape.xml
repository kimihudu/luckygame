<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">


            <solid android:color="@color/grey_dark"></solid>

            <stroke
                android:width="3dp"
                android:color="#C4CDE0"></stroke>

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"></padding>

            <corners android:radius="0dp"></corners>

        </shape>
    </item>
</layer-list>