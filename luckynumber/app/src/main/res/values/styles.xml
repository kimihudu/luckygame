<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat">
        <!--<item name="android:windowBackground">@drawable/background_splash</item>-->
        <!--<item name="android:popupMenuStyle">@style/AndroidSRC.PopupMenu</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BtnCus" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/cus_btn_selector</item>
    </style>

    <style name="BtnNo" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/cus_btnno_selector</item>
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
